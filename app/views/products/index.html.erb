<p id="notice"><%= notice %></p>

<h1>Productos</h1>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Lista de Productos</div>

  <!-- Table -->
  <table class="table">
    <thead>
    <tr>
      <th>Nombre</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>

<br>

<%= link_to 'Nuevo Producto', new_product_path, class: "btn btn-warning" %>
